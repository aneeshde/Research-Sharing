<%= form_for( @faq, @document) do |f| %>
  <% if @faq.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@faq.errors.count, "error") %> prohibited this faq from being saved:</h2>

      <ul>
      <% @faq.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= hidden_field_tag :paper_id , @faq.paper_id %>
  <div class="field">
    <%= f.label :question %><br />
    <%= f.text_field :question %>
  </div>
  <div class="field">
    <% if !(current_author.blank?) %>
    <%= f.label :answer %><br />
    <%= f.text_area :answer %>
  </div
    <div class="field">
      <%= f.label :tag_list, "Enter Tags (Seperated by commas)" %><br />
      <%= f.text_field :tag_list %>
    </div>

    <% end %>
    <%= @test %>
    <br/>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<%= form_for @user, :url => users_path, :html => { :multipart => true } do |form| %>
  <%= form.file_field :avatar %>
<% end %>