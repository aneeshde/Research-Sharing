<p id="notice"><%= notice %></p>

<table style = "border-style:solid; width:100%">
  <tr style = "border-style:solid">
    <td style = "border-style:solid; width:100%">
      <p>
        <b>Title:</b>
        <%= @paper.title %>
      </p>

      <p>
        <b>Author:</b>
        <%= @paper.author.authorname %>
      </p>

      <p>
        <b>Description:</b>
        <%= @paper.description %>
      </p>

      <p>
        <b>User FAQ's:</b>
        <% @paper.faqs.each do |faq| %>
            <br /><%= faq.question %>
        <% end %>
      </p>
      <iframe src="/pdfjs/web/viewer.html?file=<%= @document.first.asset.url%>" style="border: 0" width="50%" height="700" frameborder="0" scrolling="no"></iframe>
    </td>

    <td style = "border-style:solid">
      <% @faqs = @paper.faqs %>
      <%= render partial: "faqs/index", :locals => {faqs:@faqs} %>
    </td>
    <td>
      <iframe name="faq_content" height="600px"></iframe>
    </td>
  </tr>
</table>


<%= link_to 'FAQ', paper_faqs_path(@paper,@faq) %>
<%= link_to 'Edit', edit_paper_path(@paper) %> |
<%= link_to 'Back', papers_path %>



