<% if author_signed_in? %>
<h1>Listing papers</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Description</th>
    <th>Tag</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<br/>
<% @papers.each do |paper| %>
  <tr>

    <td><%= paper.title %></td>
    <td><%= paper.author %></td>
    <td><%= paper.description %></td>
    <td><%= raw paper.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')  %></td>
    <td><%= link_to 'Show', paper %></td>
    <td><%= link_to 'Edit', edit_paper_path(paper) %></td>
    <td><%= link_to 'Destroy', paper, method: :delete, data: { confirm: 'Are you sure?' } %></td>

  </tr>
<% end %>
</table>

<br />

<div id="tag_cloud">
  <% tag_cloud Paper.tag_counts, %w{s m l} do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>


<!-- search field -->
<%= form_tag papers_path, :method => 'get' do %>
  <p>
  <lbael>Type in title/ author/ description to search: </lbael><br/>
    <%= text_field_tag :search, params[:search] %>
    <br />
    <%= submit_tag "Search", :author => nil%>
  </p>
<% end %>


<%= link_to 'New Paper', new_paper_path %>

    <% current_author %>

<% end %>