<%= form_for @search_page, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :author, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :author, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :publication_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :publication_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :SPARK_publication_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :SPARK_publication_date, :class => 'date_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                search_page_path, :class => 'btn' %>
  </div>
<% end %>
