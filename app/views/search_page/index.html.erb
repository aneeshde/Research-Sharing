<%- model_class = SearchPage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:author) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:publication_date) %></th>
      <th><%= model_class.human_attribute_name(:SPARK_publication_date) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @search_pages.each do |search_page| %>
      <tr>
        <td><%= link_to search_page.id, search_page_path(search_page) %></td>
        <td><%= search_page.author %></td>
        <td><%= search_page.title %></td>
        <td><%= search_page.publication_date %></td>
        <td><%= search_page.SPARK_publication_date %></td>
        <td><%=l search_page.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_search_page_path(search_page), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      search_page_path(search_page),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_search_page_path,
            :class => 'btn btn-primary' %>
