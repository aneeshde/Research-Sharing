<!DOCTYPE html>
<html>
<head>
  <title>Research Sharing Project</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "jquery-2.1.1" %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav>
  <div class="menu">
    <ul>
      <% if author_signed_in? %>

            <%= link_to('Logout', destroy_author_session_path, :method => :delete) %>

      <% else %>

            <%= link_to('Login', new_author_session_path)  %>

      <% end %>
    </ul>
  </div>
</nav>

<%= link_to "Sign in with Facebook", author_omniauth_authorize_path(:facebook) unless author_signed_in? %>

<section id="main">

  <div>

  
  <% if params && params[:notice] %>
      <p class="notice"><%= params[:notice].html_safe %></p>
  <% end %>
  <% if flash[:error] %>
      <p class="error"><%= flash[:error].html_safe %></p>
  <% end %>
   <% if flash[:alert] %>
      <p class="alert"><%= flash[:alert].html_safe %></p>
   <% end %>
  </div>

  <%= yield %>
</section>

</body>
</html>
